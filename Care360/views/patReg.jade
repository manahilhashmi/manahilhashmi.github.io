doctype html
html
  head
    meta(charset='UTF-8')

    link(rel='icon', type='image/png', href='../images/logo.png')

    title Care360

    meta(name='viewport', content='width=device-width, initial-scale=1')

    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css')

    link(rel='stylesheet prefetch', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css')

    link(rel='stylesheet', type='text/css', href='../stylesheets/patReg.css')
  body
    .image


    .row
      div(ui-view='')

    body(ng-controller='RegisterCtrl', ng-app='myApp')
      .col-md-12.col-md-offset-3
        h3 Dear Patient! Please Register Yourself with Care360.


        form.form(ng-submit='formSubmit()')
          .col-md-5
            .form-group
              input.form-control(type='text', ng-model='user.FullName', placeholder='Full Name', required='')


            .form-group
              input.form-control(type='text', ng-model='user.ContactNumber', placeholder='Contact Number', required='')


            .form-group
              input.form-control(type='text', ng-model='user.EmailID', placeholder='Email ID', required='')


            .form-group
              input.form-control(type='password', ng-model='user.Password', placeholder='Password', required='')


            .form-group
              input.form-control(type='text', ng-model='user.Age', placeholder='Age', required='')



            .form-group
              input.form-control(type='text', ng-model='user.Weight', placeholder='Weight (in kg)', required='')


            .form-group
              input.form-control(type='text', ng-model='user.Height', placeholder='Height (in cm)', required='')



              button.btn.btn-primary(type='submit') Submit


      script(src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js')
      script(src='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js')
      script(src='http://cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.14/angular.min.js')
      script(src='http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.18/angular-ui-router.js')


      script(src='../js/patReg.js')
